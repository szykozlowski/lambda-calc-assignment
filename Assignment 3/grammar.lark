?start: exp

?exp: "\\" NAME "." exp             -> lam
      | exp1            
?exp1: exp1 exp2                    -> app
      | exp2
?exp2: NAME                         -> var
      | "(" exp ")"

NAME: /[a-z_][a-zA-Z0-9_]*/         # names cannot start with upper case

COMMENT: /--[^\n]*/                 // comments start with --
%ignore COMMENT
%import common.WS
%ignore WS
