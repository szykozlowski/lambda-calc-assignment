?start: exp

?exp: "\\" NAME "." exp             -> lam
      | exp1   
?exp1: exp1 "+" exp2             -> plus
   | exp2
?exp2: exp2 exp3                    -> app
      | exp3
?exp3: NAME                         -> var
      | "(" exp ")"

NAME: /[a-z_][a-zA-Z0-9_]*/         
%import common.NUMBER

%import common.WS
%ignore WS

%ignore /\/\/[^\n]*/  
%ignore /\/\*[\s\S]*?\*\//  
